{
  "expo": {
    "name": "Sabeel",
    "slug": "Sabeel",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sabeel",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.Sabeel",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Sabeel needs your location to calculate accurate prayer times for your area.",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#064E3B",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.Sabeel"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "supportsRTL": true
    },
    "plugins": [
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": [
              "en",
              "ar"
            ],
            "android": [
              "en",
              "ar"
            ]
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF",
          "dark": {
            "image": "./assets/images/splash-icon.png",
            "backgroundColor": "#022C22"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Cairo-Regular.ttf",
            "./assets/fonts/Cairo-Bold.ttf",
            "./assets/fonts/Cairo-SemiBold.ttf",
            "./assets/fonts/Cairo-Light.ttf",
            "./assets/fonts/Cairo-ExtraLight.ttf",
            "./assets/fonts/Cairo-Medium.ttf",
            "./assets/fonts/Cairo-ExtraBold.ttf",
            "./assets/fonts/Cairo-Black.ttf",
            "./assets/fonts/Amiri-Quran.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Sabeel needs your location to calculate accurate prayer times for your area."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "sounds": [
            "./assets/sounds/adhan_hafiz_mustafa.mp3",
            "./assets/sounds/adhan_mansour.mp3",
            "./assets/sounds/adhan_dubai_mishary.mp3",
            "./assets/sounds/adhan_mashary.mp3"
          ]
        }
      ],
      "expo-sqlite",
      [
        "expo-asset",
        {
          "assets": [
            "./assets/quran/quran_ayah_bounds.db",
            "./assets/quran/quran_data.db"
          ]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ],
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
