{
  "expo": {
    "name": "Sabeel",
    "slug": "Sabeel",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "sabeel",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "supportsRTL": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.islamy.sabeel",
      "icon": {
        "dark": "./assets/images/ios-dark.png",
        "light": "./assets/images/ios-light.png"
      },
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSLocationWhenInUseUsageDescription": "Sabeel needs your location to calculate accurate prayer times for your area.",
        "CFBundleAllowMixedLocalizations": true,
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "api.quran-tafseer.com": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            }
          }
        },
        "CFBundleLocalizations": ["en", "ar"],
        "ITSAppUsesNonExemptEncryption": false
      },
      "appleTeamId": "ZRDDD93RS9"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/foreground.png",
        "backgroundImage": "./assets/images/bg.png",
        "monochromeImage": "./assets/images/monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.sabeel"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9c75198a-10e5-4ab5-a6c1-4ec3d172434a"
      }
    },
    "plugins": [
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": ["en", "ar"],
            "android": ["en", "ar"]
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F8FAF9",
          "dark": {
            "image": "./assets/images/splash.png",
            "backgroundColor": "#022C22"
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Cairo-Regular.ttf",
            "./assets/fonts/Cairo-Bold.ttf",
            "./assets/fonts/Cairo-SemiBold.ttf",
            "./assets/fonts/Cairo-Light.ttf",
            "./assets/fonts/Cairo-ExtraLight.ttf",
            "./assets/fonts/Cairo-Medium.ttf",
            "./assets/fonts/Cairo-ExtraBold.ttf",
            "./assets/fonts/Cairo-Black.ttf",
            "./assets/fonts/Amiri-Quran.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Sabeel needs your location to calculate accurate prayer times for your area."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/foreground.png",
          "sounds": [
            "./assets/sounds/adhan_hafiz_mustafa.mp3",
            "./assets/sounds/adhan_mansour.mp3",
            "./assets/sounds/adhan_dubai_mishary.mp3",
            "./assets/sounds/adhan_mashary.mp3"
          ]
        }
      ],
      "expo-sqlite",
      [
        "expo-asset",
        {
          "assets": ["./assets/quran/quran_ayah_bounds.db", "./assets/quran/quran_data.db"]
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
